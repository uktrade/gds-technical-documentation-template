{
  "name": "gds-technical-documentation-template",
  "version": "0.0.4",
  "description": "A GDS inspired theme for DDAT documentation",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:js": "cp node_modules/govuk-frontend/govuk/all.js demo/gds/js",
    "copy:assets": "cp -R node_modules/govuk-frontend/govuk/assets/ demo/gds/assets",
    "copy": "npm run copy:assets && npm run copy:js",
    "build:css": "sass -q demo/gds/sass:demo/gds/css --load-path=node_modules/ ",
    "build": "npm run build:css && npm run copy",
    "prettier": "prettier demo/gds/sass --write"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/uktrade/gds-technical-documentation-template"
  },
  "author": "Mark Higham",
  "license": "ISC",
  "dependencies": {
    "govuk-frontend": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "sass": "^1.53.0"
  }
}
