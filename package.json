{
  "name": "gds-technical-documentation-template",
  "version": "0.0.4",
  "description": "A GDS inspired theme for DDAT documentation",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:js": "cp node_modules/govuk-frontend/govuk/all.js src/js",
    "copy:assets": "cp -R node_modules/govuk-frontend/govuk/assets/ src/assets",
    "copy": "npm run copy:assets && npm run copy:js",
    "build:css": "sass src/sass:src/css --load-path=node_modules/ ",
    "build": "npm run build:css && npm run copy",
    "prettier": "prettier src/sass --write && prettier src/js/search"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/uktrade/gds-technical-documentation-template"
  },
  "author": "Mark Higham",
  "license": "MIT",
  "dependencies": {
    "govuk-frontend": "^4.2.0"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "sass": "^1.53.0"
  }
}
